#include<stdio.h>
int main(void)
{
 int r,c,num,v;
 printf("Enter number of rows: ");
 scanf("%d", &num);
 for(r=1; r<=num; r++)
 {
 for(c=1; c<=r; c++)
  {
    if( (r%2) == 0 )
    {
      v = (c%2==0) ? 1 : 0 ;
      printf("%d",v);
    }
    else
    {
      v = (c%2==0) ? 0 : 1 ;
      printf("%d",v);
    }
  }
  printf("\n");
 }
 return 0;
}
 
